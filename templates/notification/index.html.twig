{% extends 'base.html.twig' %}

{% block title %}Liste des notifications{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-10 col-lg-offset-1">
            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i>Liste des notifications</h4>
                </div>
                <div class="widget-content">
                    <div class="table-responsive mailbox-messages">
                        <table class="table table-hover table-striped">
                            <tbody>
                            {% for n in notifications %}
                                <tr>
                                    <td class="mailbox-star">
                                        <a href="javascript:void (0);">
                                            <i class="fas fa-star text-warning"></i>
                                        </a>
                                    </td>
                                    <td class="mailbox-name">
                                        <a href=" {{ n.link }}">
                                            {{ n.user ? n.user.pseudo : n.fdb.status }}
                                        </a>
                                    </td>
                                    <td class="mailbox-subject"><b>{{ n.message }}</b></td>
                                    <td class="mailbox-date">{{ n.createdAt|date}}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
