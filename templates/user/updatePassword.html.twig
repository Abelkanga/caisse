{% extends 'user/indexUpdate.html.twig' %}
{% block title %} Modifier mot de passe {% endblock %}
{% block layout %}
    <div class="col-lg-8">
        <!-- .card -->
        <div class="card card-fluid">
            <div class="card-header bg-soft-custom" id="bg">
                <h6> <i class="fa fa-pencil-alt" style="font-size:20px;"></i> Modifier votre mot de passe </h6>
            </div>
            <div class="card-body">
                <!-- form -->
                {{ form_start(form) }}
                <!-- form row -->

                <div class="form-group">
                    <!-- form column -->
                    <label for="{{ form.password.vars.id  }}">Mot de passe actuel <span class="text-danger">*</span></label>
                    {{ form_widget(form.password, {'attr': {'class': 'form-control' }}) }}
                    {{ form_errors(form.password) }}
                    <!-- /form column -->
                </div><!-- /form row -->
                <div class="form-group">
                    <label for="{{ form.newPassword.vars.id}}">Nouveau mot de passe <span class="text-danger">*</span></label>
                    {{ form_widget(form.newPassword, {'attr': {'class': 'form-control' }}) }}
                    {{ form_errors(form.newPassword) }}
                    <div class="d-block">
                        - Longueur min 8 caract√®res <br>
                        - Mot de passe doit contenir des lettres, chiffres et symboles <br>
                    </div>
                </div>
                <!-- .form-group -->
                <div class="form-group">
                    <label for="{{ form.confirmPassword.vars.id  }}">Confirmer mot de passe <span class="text-danger">*</span></label>
                    {{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control' }}) }}
                    {{ form_errors(form.confirmPassword) }}
                </div><!-- /.form-group -->
                <!-- .form-group -->
                <hr>
                <!-- .form-actions -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary text-nowrap ml-auto">Modifier mot de passe</button>
                </div><!-- /.form-actions -->
                {{ form_end(form) }}<!-- /form -->
            </div><!-- /.card-body -->
        </div><!-- /.card -->
    </div><!-- /grid column -->
{% endblock %}


