{% extends 'base.html.twig' %}

{% block title %}Ouverture de la caisse{% endblock %}

{% block body %}

    <style>

        .custom-spacing label {
            margin-right: 30px; /* Ajustez cette valeur pour augmenter ou r√©duire l'espace */
        }

    </style>


    <div class="col-md-4">
        {{ form_start(form) }}
        <div class="card card-fluid">
            <div class="card-header bg-soft-custom">
                <h6>
                    <i class="icon-reorder"></i>
                    Ouverture de la caisse
                </h6>
            </div>

            <!-- Alignement sur une seule ligne pour le label et le champ -->
            <div class="card-body d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center custom-spacing">
                    <label class="mb-0">Date <span class="required"></span></label>
                    {{ form_widget(form.startedAt, {'attr': {'class': 'form-control form-control-sm'}}) }}
                </div>

                <button class="btn btn-primary">Ouvrir</button>
            </div>

        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
