{% extends 'base.html.twig' %}

{% block title %}Ouverture de la caisse{% endblock %}

{% block body %}

    <div class="col-md-4">
        {{ form_start(form) }}
        <div class="card card-fluid">
            <div class="card-header bg-soft-custom">
                <h6>
                    <i class="icon-reorder"></i>
                    Ouverture de la caisse
                </h6>
            </div>

            <!-- Alignement sur une seule ligne pour le label et le champ -->
            <div class="card-body d-flex justify-content-between align-items-center">

                <!-- Conteneur pour le label et le champ de date -->
                <div class="d-flex align-items-center">
                    <label class="me-2 mb-0">Date <span class="required"></span></label>
                    {{ form_widget(form.startedAt, {'attr': {'class': 'form-control form-control-sm'}}) }}
                </div>

                <!-- Bouton pour ouvrir la caisse -->
                <button class="btn btn-primary">Ouvrir la caisse</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
