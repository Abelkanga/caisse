{% extends 'base.html.twig' %}

{% block title %}Convertir en Bon de mission{% endblock %}

{% block body %}
    <div class="col-12">


        {{ form_start(form) }}
        <div class="card card-fluid">
            <div class="card-header bg-soft-custom">
                <h6>Créer un bon de mission</h6>
            </div>

            <div class="card-body">

                <fieldset class="form-container">
                    <legend>Référence Ordre de mission</legend>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label for="orderMission_date">Date</label>
                                <input type="text" class="form-control" value="{{ orderMission.date ? orderMission.date|date('d-m-Y') : '' }}" readonly>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label for="orderMission_reference">Référence</label>
                                <input type="text" class="form-control" value="{{ orderMission.reference }}" readonly>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label for="orderMission_orderTo">Donne ordre à</label>
                                <input type="text" class="form-control" value="{{ orderMission.orderTo }}" readonly>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label for="orderMission_getTo">De se rendre à</label>
                                <input type="text" class="form-control" value="{{ orderMission.getTo }}" readonly>
                            </div>
                        </div>
                    </div>

                    <legend>Détail</legend>
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label for="orderMission_fullName">Objet de la mission</label>
                                <input type="text" class="form-control" value="{{ orderMission.fullName }}" readonly>
                            </div>
                        </div>

                        <div class="col-4">
                            <div class="form-group">
                                <label for="orderMission_dateDepart">Date départ</label>
                                <input type="text" class="form-control"   value="{{ orderMission.dateDepart ? orderMission.dateDepart|date('d-m-Y') : '' }}"
                                       readonly>
                            </div>
                        </div>

                        <div class="col-4">
                            <div class="form-group">
                                <label for="orderMission_dateRetour">Date retour</label>
                                <input type="text" class="form-control"  value="{{ orderMission.dateRetour ? orderMission.dateRetour|date('d-m-Y') : '' }}"
                                       readonly>
                            </div>
                        </div>
                    </div>

                </fieldset>

                <fieldset class="form-container">
                    <legend>Information Bon de mission</legend>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                {{ form_label(form.date) }}
                                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                {{ form_label(form.reference) }}
                                {{ form_widget(form.reference, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                {{ form_label(form.beneficiaire) }}
                                {{ form_widget(form.beneficiaire, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                </fieldset>

                {% form_theme form 'bon_mission/_detailBonMission.html.twig' %}

                <fieldset>
                    <legend>Bon de caisse mission</legend>
                    <table class="table table-sm bordered" id="">
                        <thead>
                        <tr>
                            <th class="text-center col-8">Rubrique</th>
                            <th class="text-center col-1">Quantité</th>
                            <th class="text-center col-1">Prix unitaire</th>
                            <th class="text-center col-1">Montant (F.CFA)</th>
                            <th class="text-center col-1">Action</th>
                        </tr>
                        </thead>
                        <tbody id="tablebon_mission_detailBonMission">
                        {{ form_widget(form.detailBonMission) }}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th colspan="2">Total</th>
                            <th class="text-right"><span id="total_price"></span></th>
                            <th class="text-right"><span id="total_montant"></span></th>
                            <th></th>
                        </tr>
                        </tfoot>
                    </table>
                </fieldset>

            </div>

            <div class="card-footer">
                <div class="card-footer-content">

                    <a href="{{ path('app_order_mission_index') }}" class="btn btn-info float-right ml-2"><i class="oi oi-home"></i> Retour</a>

                    <button type="submit" class="btn btn-success float-right ml-2">
                        <i class="oi oi-check"></i> Valider
                    </button>
                </div>

            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
