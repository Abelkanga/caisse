            <th class="text-center col-1">Quantité</th>
            <th class="text-center col-1">Prix unitaire</th>
            <th class="text-center col-1">Montant (F.CFA)</th>
            <th class="text-center col-1">Action</th>
        </tr>
        </thead>
        <tbody id="tablebon_mission_detailBonMission">
        {{ form_widget(form.detailBonMission) }}
        </tbody>
        <tfoot>
        <tr>
            <th colspan="2">Total</th>
            <th class="text-right"><span id="total_price"></span></th>
            <th class="text-right"><span id="total_montant"></span></th>
            <th></th>
        </tr>
        </tfoot>
    </table>
