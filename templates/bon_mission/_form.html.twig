<fieldset class="form-container">
    <legend>Information du bon de mission</legend>

    <div class="row ">

        <div class="col-3">
            <div class="form-group">
                <label for="date_etablissement">Date</label>
                {{ form_widget(form.date, {'attr' : {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-3">
            <div class="form-group">
                <label for="reference">Référence</label>
                {{ form_widget(form.reference, {'attr' : {'class': 'form-control js-datepicker'}}) }}
            </div>
        </div>

        <div class="col-3">
            <div class="form-group">
                <label for="beneficiaire">Bénéficiaire<span class="text-danger">*</span></label>
                {{ form_widget(form.beneficiaire, {'attr' : {'class': ' select2'}}) }}
            </div>
        </div>

    </div>
</fieldset>

<fieldset class="form-container">
    <legend>Détail de l'ordre de mission</legend>
    <div class="row">

        <div class="col-3">
            <div class="form-group">
                <label for="reference">Numéro d'ordre</label>
                {{ form_widget(form.reference, {'attr' : {'class': 'form-control js-datepicker'}}) }}
            </div>
        </div>

        <div class="col-3">
            <div class="form-group">
                <label for="orderTo">Donne ordre à<span class="text-danger">*</span></label>
                {{ form_widget(form.orderTo, {'attr' : {'class': 'form-control select2'}}) }}
            </div>
        </div>

        <div class="col-3">
            <div class="form-group">
                <label for="getTo">De se rendre à<span class="text-danger">*</span></label>
                {{ form_widget(form.getTo, {'attr' : {'class': 'form-control select2'}}) }}
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-3">
            <div class="form-group">
                <label for="fullName">Objet de la mission<span class="text-danger">*</span></label>
                {{ form_widget(form.fullName, {'attr' : {'class': 'form-control select2'}}) }}
            </div>
        </div>

        <div class="col-3">
            <div class="form-group">
                <label for="dateDepart">Date départ<span class="text-danger">*</span></label>
                {{ form_widget(form.dateDepart, {'attr' : {'class': 'select2'}}) }}
            </div>
        </div>

        <div class="col-3">
            <div class="form-group">
                <label for="dateRetour">Date retour<span class="text-danger">*</span></label>
                {{ form_widget(form.dateRetour, {'attr' : {'class': 'select2'}}) }}
            </div>
        </div>

    </div>
</fieldset>

{% form_theme form 'bon_mission/_detailBonMission.html.twig' %}

