<!doctype html>
<html lang="fr">
<head>
    <title>ORBIS CAISSE</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="{{ asset('css/theme.min.css') }}" data-skin="default">
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Login : Se connecter</title>
    <style>
        /* Styling général */
        header.auth-header {
            background-color: #232754;
            padding-bottom: 7.5%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        h3.title {
            text-align: center;
            font-size: 2.5rem;
            color: #ffffff;
            margin-top: 2rem;
            margin-bottom: 1rem;
            line-height: 1.2;
            word-wrap: break-word;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        button.submit {
            background-color: #232754;
            color: #FFFFFF;
        }

        button.submit:hover {
            background-color: #232754;
            color: #FFFFFF;
        }

        .password-container {
            position: relative;
            display: flex;
            align-items: center;
            margin-top: 0.5rem;
        }

        .password-container input {
            flex: 1;
            padding-right: 2.5rem;
        }

        .password-container .toggle-password {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #000;
        }

        /* Responsivité */
        @media (max-width: 768px) {
            h3.title {
                font-size: 2rem;
                margin-top: 1rem;
            }

            header.auth-header {
                padding-bottom: 5%;
            }

            .auth-form {
                padding: 1rem;
            }

            button.submit {
                font-size: 1rem;
                padding: 0.75rem;
            }
        }

        @media (max-width: 480px) {
            h3.title {
                font-size: 1.8rem;
                margin-top: 0.5rem;
            }

            header.auth-header {
                padding-bottom: 3%;
            }

            .auth-form {
                padding: 0.5rem;
            }

            button.submit {
                font-size: 0.9rem;
                padding: 0.5rem;
            }
        }
    </style>
</head>

<body>
<main class="auth">
    <header id="auth-header" class="auth-header">
        <h3 class="title">ORBIS CAISSE</h3>
{#        <img src="#" height="150" alt="Logo">#}
    </header>
    <form class="auth-form" method="post" action="{{ path('app_login') }}">
        <div class="form-group mb-4">
            <label for="inputUser">Nom d'utilisateur</label>
            <input type="text" id="inputUser" name="_username" value="{{ last_username }}"
                   class="form-control form-control-lg" required autofocus>
        </div>
        <div class="form-group mb-4">
            <label for="inputPassword">Mot de passe</label>
            <div class="password-container">
                <input type="password" id="inputPassword" name="_password" class="form-control form-control-lg" required>
                <i class="fas fa-eye toggle-password"></i>
            </div>
        </div>
        <div class="form-group mb-4">
            <button class="btn btn-lg btn-block submit" type="submit">S'identifier</button>
        </div>
        <div class="form-group text-center">
            <input type="checkbox" id="remember_me" name="_remember_me">
            <label for="remember_me">Se souvenir de moi</label>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <p class="py-2 text-center">
            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
        </p>
        <p class="text-center text-muted">Copyright © {{ 'now'|date('Y') }} Designed by
            <a href="https://www.offset-consulting.com/">Offset Consulting</a>.
        </p>
    </form>
</main>
<script src="{{ asset('js/jquery.min.js') }}"></script>
<script src="{{ asset('js/popper.min.js') }}"></script>
<script src="{{ asset('js/bootstrap.min.js') }}"></script>
<script>
    $(document).ready(function() {
        $('.toggle-password').on('click', function() {
            let input = $('#inputPassword');
            const isPassword = input.attr('type') === 'password';
            input.attr('type', isPassword ? 'text' : 'password');
            $(this).toggleClass('fa-eye fa-eye-slash');
        });
    });
</script>
</body>
</html>
