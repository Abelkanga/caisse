{% extends 'imprimerA.html.twig' %}

{% block body %}

    <style>
        @page {
            size: A4;
            margin: 1cm; /* Vous pouvez ajuster les marges selon vos besoins */
        }

        @media print {
            body {
                font-size: 12px;
                margin: 0;
                padding: 0;
            }

            .receipt-container {
                width: 100%;
                height: 100%;
                margin: 0;
                padding: 0;
            }

            .title-box {
                font-size: 20px;
                margin-bottom: 15px;
            }

            fieldset {
                border: 1px solid #000;
                padding: 10px;
                margin-bottom: 15px;
            }

            legend {
                font-size: 16px;
                padding: 0 10px;
            }

            .table th, .table td {
                padding: 6px;
            }

            .approved-by p {
                font-size: 12px;
            }

            /* Masquer le bouton d'impression */
            .print-button {
                display: none;
            }
        }

        .receipt-container {
            padding: 2em; /* Utilisez des unités relatives */
        }

        .main-content div {
            margin-bottom: 1em; /* Utilisez des unités relatives */
        }

    </style>

    <div class="receipt-container">
        <div class="title-box">
            ORDRE DE MISSION
        </div>

        <fieldset>
            <div class="main-content">
                <div>
                    <strong>DATE D'EMISSION :</strong> {{ order.date ? order.date|date('d-m-Y') : '' }}
                </div>
                <div>
                    <strong>NUMERO D'ORDRE :</strong> {{ order.reference }}
                </div>
                <div>
                    <strong>LE GERANT DE:</strong> OFFSET CONSULTING
                </div>
                <div>
                    <strong>DONNE ORDRE A :</strong> {{ order.orderTo }}
                </div>
                <div>
                    <strong>DE SE RENDRE A :</strong> {{ order.getTo }}
                </div>
                <div>
                    <strong>OBJET DE LA MISSION :</strong> {{ order.beneficiaire }}
                </div>
                <div>
                    <strong>DATE DE DEPART :</strong> {{ order.dateDepart ? order.dateDepart|date('d-m-Y') : '' }}
                </div>
                <div>
                    <strong>DATE DE RETOUR :</strong> {{ order.dateRetour ? order.dateRetour|date('d-m-Y') : '' }}
                </div>
            </div>
        </fieldset>

        <fieldset>
            <legend>AGENT(S) / PRESTATAIRES(S) CONCERNE(S)</legend>
            <table class="table table-bordered table-sm">
                <thead>
                <tr>
                    <th>N°</th>
                    <th>NOM & PRENOMS</th>
                    <th>FONCTION</th>
                    <th>SERVICE</th>
                    <th>SIGNATURE</th>
                </tr>
                </thead>
                <tbody id="tableorder_mission_detailMission">
                {% for detailMission in order.detailMission %}
                    <tr>
                        <td>{{ detailMission.reference }}</td>
                        <td>{{ detailMission.fullName }}</td>
                        <td>{{ detailMission.fonction }}</td>
                        <td>{{ detailMission.service }}</td>
                        <td>{{ detailMission.signature }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="row approved-by text-center">
                <div class="col-4">
                    <p></p>
                    <p></p>
                </div>
                <div class="col-4">
                    <p></p>
                    <p></p>
                </div>
                <div class="col-4">
                    <p>Fait à Abidjan, le __________________</p>
                </div>
            </div>

            <div class="row approved-by text-center">
                <div class="col-4">
                    <p>SIGNATURE ET NOM DU GERANT</p>
                    <p>__________________</p>
                </div>
                <div class="col-4">
                    <p></p>
                    <p></p>
                </div>
                <div class="col-4">
                    <p>Nom, fonction et visa du chef de mission</p>
                    <p>__________________</p>
                </div>
            </div>
        </fieldset>
    </div>
{% endblock %}