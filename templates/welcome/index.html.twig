{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <style>
        .card {
            background-color: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }
        .card-head {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .card-progress {
            margin-top: 10px;
        }
        .card-indicator {
            background-color: #e9ecef;
            border-radius: 5px;
            height: 5px;
        }
        .indicator {
            height: 6px;
            border-radius: 5px;
        }
        .indicator.one {
            background-color: #007bff;
        }
        .indicator.two {
            background-color: #28a745;
        }
        .indicator.three {
            background-color: #ffc107;
        }
        .indicator.four {
            background-color: #dc3545;
        }
    </style>

    <div class="container mt-5">
        <div class="row">
            {% if is_granted('ROLE_ADMIN') %}
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-head">
                            <h3>Nombre de comptes</h3>
                            <span class="menu-icon fa fa-solid fa-users"></span>
                        </div>
                        <div class="card-progress">
                            <small><a href="{{ path('app_user_index') }}">{{ nbUser ?? 0}} utilisateurs</a></small>
                            <div class="card-indicator">
                                <div class="indicator one" style="width: {{ nbUser ?? 0}}%;"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-head">
                            <h3>Caisse connectée</h3>
                            <span class="menu-icon fa fa-solid fa-cash-register"></span>
                        </div>
                        <div class="card-progress">
                            <small><a href="{{ path('caisse_index') }}">{{ nbCaisse ?? 0}} caisses</a></small>
                            <div class="card-indicator">
                                <div class="indicator three" style="width: {{ nbCaisse ?? 0}}%;"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Graphique pour les utilisateurs par rôle -->
                <canvas id="userChart"></canvas>
            {% endif %}

