{% extends 'base.html.twig' %}

{% block title %}Liste des bons d'approvisionnement{% endblock %}

{% block body %}
    <div class="col-12 col-md-12">
        <div class="card">
            <div class="card-header bg-soft-custom">
                Liste des bons d'approvisionnement
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover bordered table-sm basic-datatable">
                        <thead class="thead-light">
                        <tr>
                            <th>Date</th>
{#                            <th>Nature</th>#}
                            <th>Montant Total (F cfa)</th>
                            <th>Mode de paiement</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for bonapprovisionnement in bonapprovisionnement %}
                            <tr>
                                <td class="text-center">{{ bonapprovisionnement.date ? bonapprovisionnement.date|date('d-m-Y') : '' }}</td>
{#                                <td>{{ bonapprovisionnement.nature }}</td>#}
                                <td class="separator text-right">{{ bonapprovisionnement.montanttotal }} (F cfa)</td>
                                <td>{{ bonapprovisionnement.modepaie }}</td>
                                <td class="text-center">{{ bonapprovisionnement.status }}</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-icon btn-secondary" data-toggle="tooltip" data-html="true" title="<em>Modifier</em>" href="{{ path('bonapprovisionnement_edit', {'id': bonapprovisionnement.id}) }}">
                                        <i class="fa fa-pencil-alt"></i>
                                    </a>
                                    <span class="mx-1"></span>
                                    <a class="btn btn-sm btn-icon btn-secondary" data-toggle="tooltip" data-html="true" title="<em>Voir</em>" href="{{ path('bonapprovisionnement_show', {'id': bonapprovisionnement.id}) }}">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <span class="mx-1"></span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="card-footer-content">
                    {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('bonapprovisionnement_new') }}" class="btn btn-primary float-right ml-2">
                        Nouveau</a>
                    <a href="{{ path('app_welcome') }}" class="btn btn-success float-right ml-3">
                        <i class="oi oi-home"></i>
                        Accueil</a>
                    {% else %}
                    <a href="{{ path('app_welcome') }}" class="btn btn-success float-right ml-3">
                        <i class="oi oi-home"></i>
                        Accueil</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}



