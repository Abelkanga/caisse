{% extends 'base.html.twig' %}

{% block title %}État de la Caisse{% endblock %}

{% block body %}
    <fieldset>
        <div class="container-fluid">
            <div class="card card-fluid">
                <div class="card-header bg-soft-custom">
                    <h6><i class="fa-solid fa-list" style="font-size:18px;"></i> Période</h6>
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-12">
                            <form method="get" action="{{ path('app_etat_caisse') }}" name="form_journal_caisse" class="formDate">
                                <div class="form-row">
                                    <div class="form-group col-12 col-md-4 d-flex align-items-center">
                                        <label for="date_debut" class="col-auto pr-2" style="min-width: 90px;">Date début</label>
                                        <input type="date" name="date_debut" class="form-control flex-grow-1" style="border-radius: 10px;">
                                    </div>
                                    <div class="form-group col-12 col-md-4 d-flex align-items-center">
                                        <label for="date_fin" class="col-auto pr-2" style="min-width: 90px;">Date fin</label>
                                        <input type="date" name="date_fin" class="form-control flex-grow-1" style="border-radius: 10px;">
                                    </div>
                                    <div class="form-group col-12 col-md-4 d-flex align-items-center justify-content-center justify-content-md-start">
                                        <i class="fa-solid fa-magnifying-glass mr-2"></i>
                                        <input type="submit" value="Rechercher" class="btn btn-success">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <div class="container-fluid">
            <div class="card">
                <div class="card-header bg-soft-custom" style="background:#21244e; color:white;">
                    <i class="fa-solid fa-list" style="font-size:18px;"></i> &nbsp;État de la Caisse
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered table-sm" id="table_reporting_journal">
                            <thead class="thead-light">
                            <tr>
                                <th class="text-center">Date</th>
                                <th class="text-center">N° de Pièce</th>
                                <th class="text-center">Intitulé</th>
                                <th class="text-center">Entrée</th>
                                <th class="text-center">Sortie</th>
                                <th class="text-center">Solde</th>
                            </tr>
                            </thead>
                            <tbody>
                            <!-- Placeholder for dynamic rows -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
{% endblock %}

{% block javascripts %}
    <script>
        // Custom JavaScript for additional functionality, if needed
    </script>
{% endblock %}
