{% extends 'base.html.twig' %}

{% block title %}État de la Caisse{% endblock %}

{% block body %}

    <fieldset>
        <div class="col-12">
            <div class="card card-fluid">
                <div class="card-header bg-soft-custom" id="bg">
                    <h6><i class="fa-solid fa-list" style="font-size:18px;"></i> Période</h6>
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-md-12">
                            <form method="get" action="{{ path('app_etat_caisse') }}" name="form_journal_caisse"
                                  class="formDate d-flex justify-content-center align-items-center">
                                <div class="form-group d-flex align-items-center col-md-4">
                                    <label for="date_debut" class="col-3"> Date début </label>
                                    <input type="date" name="date_debut" class="input-large mx-2 form-control"
                                           style="padding: 5px; margin: 5px; border: 1px solid #ced4da; border-radius: 10px; width: 500px; height: 40px;">
                                </div>
                                <div class="form-group d-flex align-items-center col-md-4">
                                    <label for="date_fin" class="col-3"> Date fin </label>
                                    <input type="date" name="date_fin" class="input-large mx-2 form-control"
                                           style="padding: 5px; margin: 5px; border: 1px solid #ced4da; border-radius: 10px; width: 500px; height: 40px;">
                                </div>

                                <div class="form-group d-flex align-items-center col-md-4">
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                    <input type="submit" value="Rechercher" class="btn btn-success float-right ml-3">
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <div class="col-12 col-md-12">
            <div class="card">
                <div class="card-header bg-soft-custom" style="background:#21244e; color:white;">
                    <i class="fa-solid fa-list" style="font-size:18px;"></i> &nbsp;État de la Caisse
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover bordered table-sm "
                               id="table_reporting_journal">
                            <thead class="thead-light">
                            <tr>
                                <th class="text-center">Date</th>
                                <th class="text-center">N° de Pièce</th>
                                <th class="text-center">Intitulé</th>
                                <th class="text-center">Entrée</th>
                                <th class="text-center">Sortie</th>
                                <th class="text-center">Solde</th>
                            </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
{% endblock %}

{% block javascripts %}
    <script>

    </script>

{% endblock %}