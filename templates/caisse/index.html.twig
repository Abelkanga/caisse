{% extends 'base.html.twig' %}

{% block title %}Fiches de Besoin{% endblock %}

{% block body %}
    <div class="col-12 col-md-12">
        <div class="card">
            <div class="card-header bg-soft-custom">
                Liste des caisses
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover bordered table-sm basic-datatable">
                        <thead class="thead-light">
                        <tr>
                            <th>Code</th>
                            <th>Intitul√©</th>
                            <th>Caissier</th>
                            <th>Solde (F Cfa)</th>
                            <th>Plafond</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for c in caisse %}
                            <tr>
                                <td class="align-middle">{{ c.code }}</td>
                                <td class="align-middle">{{ c.intitule }}</td>
                                <td class="align-middle">{{ c.user }}</td>
                                <td class="text-right separator align-middle">{{ c.soldedispo ?? 'Aucune information' }}</td>
                                <td class="text-right align-middle">{{ c.plafond|number_format(0, ',', ' ') }}</td>
                                <td class="text-center align-middle">
                                    <a class="btn btn-sm btn-icon btn-secondary" data-toggle="tooltip" data-html="true" title="<em>Modifier</em>" href="{{ path('caisse_edit', {'id': c.id}) }}">
                                        <i class="fa fa-pencil-alt"></i>
                                    </a>
                                    <span class="mx-1"></span>
{#                                    <a class="btn btn-sm btn-icon btn-secondary" href="{{ path('c_delete', {'id': c.id}) }}">#}
{#                                        <i class="fas fa-trash-alt"></i>#}
{#                                    </a>#}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="card-footer-content">
                    <a href="{{ path('caisse_new') }}" class="btn btn-primary float-right ml-2">
                        Nouveau</a>
                    <a href="{{ path('app_welcome') }}" class="btn btn-success float-right ml-3">
                        <i class="oi oi-home"></i>
                        Accueil</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

