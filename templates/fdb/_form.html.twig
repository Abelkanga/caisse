<fieldset class="form-container">
    <legend>Information Fiche de besoin</legend>

    <div class="row ">
        <div class="col-6">
            <div class="form-group">
                <label for="date_etablissement">Date</label>
                {{ form_widget(form.date, {'attr' : {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-6">
            <div class="form-group">
                <label for="numero_fiche_besoin">N° Fiche de besoin</label>
                {{ form_widget(form.numero_fiche_besoin, {'attr' : {'class': 'form-control js-datepicker'}}) }}
            </div>
        </div>
    </div>

    <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label for="emetteur" >Emetteur<span class="text-danger">*</span></label>
                    {{ form_widget(form.emeteur, {'attr' : {'class': ' select2'}}) }}
                </div>
            </div>

            <div class="col-3">
                <div class="form-group">
                    <label for="destinataire">Destinataire</label>
                    {{ form_widget(form.destinataire, {'attr' : {'class': 'form-control '}}) }}
                </div>
            </div>

            <div class="col-3">
{#                <div class="col-3 offset-1">#}
                <div class="form-group">
                    <label for="beneficiaire">Bénéficiaire<span class="text-danger">*</span></label>
                    {{ form_widget(form.beneficiaire, {'attr' : {'class': 'form-control'}}) }}
                </div>
            </div>
    </div>

    <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label for="typeExpense">Type Dépense<span class="text-danger">*</span></label>
                        {{ form_widget(form.typeExpense, {'attr' : {'class': 'form-control select2', 'data-dependent-element' : '#fdb_expense'}}) }}
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        <label for="expense">Dépense</label>
                        {{ form_widget(form.expense, {'attr' : {'class': 'form-control select2'}}) }}
                    </div>
                </div>

            </div>

</fieldset>

{% form_theme form 'fdb/_detail.html.twig' %}

<fieldset>
    <legend>Détail Fiche de besoin</legend>
    <table class="table table-sm bordered" id="">
        <thead>
        <tr>
            <th class="text-center">Désignation</th>
            <th class="text-center">Quantité</th>
            <th class="text-center">Prix</th>
            <th class="text-center">Montant</th>
            <th class="text-center">Action</th>
        </tr>
        </thead>
        <tbody id="tablefdb_details">
        {{ form_widget(form.details) }}
        </tbody>
        <tfoot>
        <tr>
            <th colspan="2">Total</th>
            <th class="text-right"><span id="total_price"></span></th>
            <th class="text-right"><span id="total_montant"></span></th>
            <th></th>
        </tr>
        </tfoot>
    </table>
</fieldset>



