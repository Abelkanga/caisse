<fieldset class="form-container">
    <legend>Information fiche de besoin</legend>

    <div class="row">
        <div class="col-12 col-md-4 mb-3">
            <div class="form-group">
                <label for="date_etablissement">Date</label>
                {{ form_widget(form.date, {'attr' : {'class': 'form-control'}}) }}
            </div>
        </div>


        <div class="col-12 col-md-4 mb-3">
            <div class="form-group">
                <label for="numero_fiche_besoin">N° Fiche de besoin</label>
                {{ form_widget(form.numero_fiche_besoin, {'attr' : {'class': 'form-control js-datepicker'}}) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-4 mb-3">
            <div class="form-group">
                <label for="emetteur">Emetteur<span class="text-danger">*</span></label>
                {{ form_widget(form.validBy, {'attr' : {'class': 'select2'}}) }}
            </div>
        </div>

        <div class="col-12 col-md-4 mb-3">
            <div class="form-group">
                <label for="beneficiaire">Bénéficiaire<span class="text-danger">*</span></label>
                {{ form_widget(form.beneficiaire, {'attr' : {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-4 mb-3">
            <div class="form-group">
                <label for="typeExpense">Type opération<span class="text-danger">*</span></label>
                {{ form_widget(form.typeExpense, {'attr' : {'class': 'form-control select2', 'data-dependent-element' : '#fdb_expense'}}) }}
            </div>
        </div>

        <div class="col-12 col-md-8 mb-3">
            <div class="form-group">
                <label for="expense">Nature opération<span class="text-danger">*</span></label>
                {{ form_widget(form.expense, {'attr' : {'class': 'form-control select2'}}) }}
            </div>
        </div>
    </div>
</fieldset>


{% form_theme form 'fdb/_detail.html.twig' %}

<fieldset>
    <legend>Détail opération</legend>
    <table class="table table-sm bordered" id="">
