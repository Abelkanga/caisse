{% extends 'base.html.twig' %}

{% block title %}Fiches de Besoin{% endblock %}

{% block body %}

    <div class="col-12 col-md-12">
        <div class="card">
            <div class="card-header bg-soft-custom">
                Liste des Fiches de Besoins
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover bordered table-sm basic-datatable">
                        <thead class="thead-light">
                        <tr>
                            <th>Date</th>
                            <th>Type Opération</th>
                            <th>Montant Total</th>
                            <th>Emetteur</th>
                            <th>Destinataire</th>
                            <th>Bénéficiaire</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for fdb in fdb %}
                            <tr>
                                <td class="text-center">{{ fdb.date ? fdb.date|date('d-m-Y') : '' }}</td>

                                <td>{{ fdb.typeExpense }}</td>
                                <td class="separator text-right ">{{ fdb.total }}</td>
                                <td>{{ fdb.emeteur }}</td>
                                <td>{{ fdb.destinataire }}</td>
                                <td>{{ fdb.beneficiaire }}</td>
                                <td class="text-center">
                                    <span class="badge badge-success">  {{ fdb.status }}</span>
                                   </td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-icon btn-secondary" data-toggle="tooltip" data-html="true" title="<em>Modifier</em>" href="{{ path('fdb_edit', {'id': fdb.id}) }}">
                                        <i class="fa fa-pencil-alt"></i>
                                    </a>
                                    <span class="mx-1"></span>
                                    <a class="btn btn-sm btn-icon btn-secondary" data-toggle="tooltip" data-html="true" title="<em>Voir</em>" href="{{ path('fdb_show', {'id': fdb.id}) }}">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="card-footer-content">
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('fdb_new') }}" class="btn btn-primary float-right ml-2">
                            Nouveau</a>
                        <a href="{{ path('app_welcome') }}" class="btn btn-success float-right ml-3">
                            <i class="oi oi-home"></i>
                            Accueil</a>
                    {% else %}
                        <a href="{{ path('app_welcome') }}" class="btn btn-success float-right ml-3">
                            <i class="oi oi-home"></i>
                            Accueil</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
