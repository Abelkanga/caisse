{% extends 'base.html.twig' %}

{% block title %}Fiches de Besoin{% endblock %}

{% block body %}
    <h1>Liste des Fiches de Besoins</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date d’Établissement</th>
                <th>Objet</th>
                <th>Responsable de la Demande</th>
                <th>Destinataire</th>
                <th>Départements ou Projets Concernés</th>
                <th>Signature</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fdb in fdb %}
            <tr>
                <td>{{ fdb.id }}</td>
                <td>{{ fdb.date ? fdb.date.format('Y-m-d') : '' }}</td>
                <td>{{ fdb.objet }}</td>
                <td>{{ fdb.responsable }}</td>
                <td>{{ fdb.destinataire }}</td>
                <td>{{ fdb.departement }}</td>
                <td>{{ fdb.signature }}</td>
                <td>
                    <a href="{{ path('fdb_show', {'id': fdb.id}) }}">Voir</a>
                    <a href="{{ path('fdb_edit', {'id': fdb.id}) }}">Modifier</a>
                    <a href="{{ path('fdb_delete', {'id': fdb.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('fdb_new') }}">Créer une nouvelle Fiche de Besoin</a>
{% endblock %}
