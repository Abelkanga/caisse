<fieldset>
    <legend>Information Dépense</legend>

    <div class="row">
        <div class="col-3">
            <div class="form-group">
                <label for="date">Date d'établissement</label>
                {{ form_widget(form.date, {'attr' : {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-3">
            <div class="form-group">
                <label for="montant">Montant</label>
                {{ form_widget(form.montant, {'attr' : {'class': 'form-control separator text-right' }}) }}
            </div>
        </div>

        <div class="col-3">
            <div class="form-group">
                <label for="category">Catégorie</label>
                {{ form_widget(form.category, {'attr' : {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-3">
            <div class="form-group">
                <label for="modepaie">Mode de paiement</label>
                {{ form_widget(form.modepaie, {'attr' : {'class': 'form-control select2'}}) }}
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-3">
            <div class="form-group">
                <label for="typeExpense">Type Dépense</label>
                {{ form_widget(form.typeExpense, {'attr' : {'class': 'form-control select2'}}) }}
            </div>
        </div>

        <div class="col-3">
            <div class="form-group">
                <label for="expense">Dépense</label>
                {{ form_widget(form.expense, {'attr' : {'class': 'form-control select2'}}) }}
            </div>
        </div>



    </div>
</fieldset>



