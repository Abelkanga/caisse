{% extends 'base.html.twig' %}

{% block title %}Liste des dépenses{% endblock %}

{% block body %}

    <div class="col-12 col-md-12">
        <div class="card">
            <div class="card-header bg-soft-custom">
                Liste des dépenses
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover bordered table-sm basic-datatable">
                        <thead class="thead-light">
                        <tr>
                            <th>Date</th>
                            <th>Catégorie</th>
                            <th>Montant (F cfa)</th>
                            <th>Mode de paiement</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for depense in depense %}
                            <tr>
                                <td class="text-center">{{ depense.date ? depense.date|date('d-m-Y') : '' }}</td>
                                <td>{{ depense.category }}</td>
                                <td class="separator text-right">{{ depense.montant }} (F cfa)</td>
                                <td>{{ depense.modepaie }}</td>
                                <td class="text-center">{{ depense.status }}</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-icon btn-secondary" href="{{ path('depense_edit', {'id': depense.id}) }}">
                                        <i class="fa fa-pencil-alt"></i>
                                    </a>
                                    <span class="mx-1"></span>
                                    <a class="btn btn-sm btn-icon btn-secondary" href="{{ path('depense_show', {'id': depense.id}) }}">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <span class="mx-1"></span>

                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="card-footer-content">
                    {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('depense_new') }}" class="btn btn-primary float-right ml-2">
                        Nouveau</a>
                    <a href="{{ path('app_welcome') }}" class="btn btn-success float-right ml-3">
                        <i class="oi oi-home"></i>
                        Accueil</a>
                    {% else %}
                    <a href="{{ path('app_welcome') }}" class="btn btn-success float-right ml-3">
                        <i class="oi oi-home"></i>
                        Accueil</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}


