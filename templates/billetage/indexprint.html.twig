{% extends 'base.html.twig' %}

{% block title %}Liste des Billetages{% endblock %}

{% block body %}
    <div class="col-12 col-md-12">
    <div class="card">
    <div class="card-header bg-soft-custom">
        Liste des billetages
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover bordered table-sm basic-datatable">
                <thead class="thead-light">
                <tr>
                    <th>Date</th>
                    <th>Référence</th>
                    <th>Solde Disponible</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for billetage in billetages %}
                    <tr>
                        <td class="text-center align-middle">{{ billetage.date|date('d/m/Y') }}</td>
                        <td class="align-middle">{{ billetage.reference }}</td>
                        <td class="separator text-right align-middle">{{ billetage.balance | number_format(0, ',', ' ')}}</td>
                        <td class="text-center align-middle">
                            <a class="btn btn-sm btn-icon btn-secondary" data-toggle="tooltip" data-html="true" title="Voir" href="{{ path('billetage_inventaire_print', {uuid: billetage.uuid}) }}">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="card-footer">
                <div class="card-footer-content">
                    <a href="{{ path('app_welcome') }}" class="btn btn-success float-right ml-3">
                        <i class="oi oi-home"></i>
                        Accueil</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}