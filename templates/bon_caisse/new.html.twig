{% extends 'base.html.twig' %}

{% block title %}Convertir en Bon de Caisse{% endblock %}

{% block body %}
    <div class="col-12">


        {{ form_start(form) }}
        <div class="card card-fluid">
            <div class="card-header bg-soft-custom">
                <h6>Créer un bon de caisse</h6>
            </div>

            <div class="card-body">

                <fieldset class="form-container">
                    <legend>Référence Fiche de Besoin</legend>
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label for="fdb_date">Date</label>
                                <input type="text" class="form-control" value="{{ fdb.date ? fdb.date|date('d-m-Y') : '' }}" readonly>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label for="fdb_numero">Référence</label>
                                <input type="text" class="form-control" value="{{ fdb.numeroFicheBesoin }}" readonly>
                            </div>
                        </div>
                    </div>

                    <legend>Détail</legend>
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label for="fdb_typeExpense">Type Opération</label>
                                <input type="text" class="form-control" value="{{ fdb.typeExpense.name }}" readonly>
                            </div>
                        </div>


                        <div class="col-4">
                            <div class="form-group">
                                <label for="fdb_expense">Nature Opération</label>
                                <input type="text" class="form-control" value="{{ fdb.expense.name }}" readonly>
                            </div>
                        </div>

                        <div class="col-4">
                            <div class="form-group">
                                <label for="fdb_total">Montant à payer (F.CFA)</label>
                                <input type="text" class="form-control separator" value="{{ fdb.total }}" readonly>
                            </div>
                        </div>
                    </div>
                </fieldset>

                <fieldset class="form-container">
                    <legend>Information Bon de caisse</legend>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                {{ form_label(form.date) }}
                                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                {{ form_label(form.reference) }}
                                {{ form_widget(form.reference, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                {{ form_label(form.beneficiaire) }}
                                {{ form_widget(form.beneficiaire, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                </fieldset>


            </div>

            <div class="card-footer">
                <div class="card-footer-content">
                    {% include '_modal_manager.html.twig' %}
                    <a href="{{ path('fdb_index') }}" class="btn btn-info float-right"><i class="oi oi-home"></i> Retour</a>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
