{% extends 'base.html.twig' %}

{% block title %}Bon de caisse{% endblock %}

{% block body %}

    <div class="col-12 col-md-12">
        <div class="card">
            <div class="card-header bg-soft-custom">
                Liste des bons de caisse
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover bordered table-sm basic-datatable">
                        <thead class="thead-light">
                        <tr>
                            <th>Date</th>
                            <th>Référence</th>
                            <th>Bénéficiaire</th>
                            <th>Montant (F.CFA)</th>
                            <th>Statut</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for bonCaisse in bonCaisse %}
                            <tr>
                                <td class="text-center align-middle">{{ bonCaisse.date ? bonCaisse.date|date('d-m-Y') : '' }}</td>
                                <td class="align-middle">{{ bonCaisse.reference }}</td>
                                <td class="align-middle">{{ bonCaisse.beneficiaire }}</td>
                                <td class="separator text-right align-middle">{{ bonCaisse.montant | number_format(0, ',', ' ') }}</td>
                                <td class="text-center align-middle">
                                    <span class="badge badge-success">{{ bonCaisse.status }}</span>
                                </td>
                                <td class="text-center align-middle">

                                    <!-- Show button to view Fdb details -->
                                    <a class="btn btn-sm btn-icon btn-secondary" data-toggle="tooltip" data-html="true" title="Voir" href="{{ path('bon_caisse_show', {'uuid': bonCaisse.uuid}) }}">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="card-footer-content">
                    <a href="{{ path('app_welcome') }}" class="btn btn-success float-right ml-3">
                        <i class="oi oi-home"></i>
                        Accueil</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
