{% extends 'base.html.twig' %}

{% block title %}Retour de fonds{% endblock %}

{% block body %}

    <div class="col-12 col-md-12">
        <div class="card">
            <div class="card-header bg-soft-custom">
                Liste des retours de fonds
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover bordered table-sm basic-datatable">
                        <thead class="thead-light">
                        <tr>
                            <th>Date</th>
                            <th>Référence</th>
                            <th>Type de dépense</th>
                            <th>Référence de la dépense</th>
                            <th>Montant sortie (FCFA)</th>
                            <th>Montant retourné (FCFA)</th>
                            <th>Statut</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for backCash in backCash %}
                            <tr>
                                <td class="text-center align-middle">{{ backCash.date ? backCash.date|date('d-m-Y') : '' }}</td>
                                <td class="align-middle">{{ backCash.reference }}</td>
                                <td class="align-middle">{{ backCash.typeDepense }}</td>
                                <td class="align-middle">{{ backCash.referenceDepense }}</td>
                                <td class="align-middle separator">{{ backCash.montant }}</td>
                                <td class="align-middle separator">{{ backCash.montantRetour }}</td>
                                <td class="text-center align-middle">
                                    <span class="badge badge-info">{{ backCash.status }}</span>
                                </td>
                                <td class="text-center align-middle">
                                    <!-- Show button to view Fdb details -->
                                    <a class="btn btn-sm btn-icon btn-secondary" data-toggle="tooltip" data-html="true" title="Voir" href="">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="card-footer-content">
                    <a href="{{ path('back_cash_new') }}" class="btn btn-primary float-right ml-2">
                        Nouveau</a>
                    <a href="{{ path('app_welcome') }}" class="btn btn-success float-right ml-3">
                        <i class="oi oi-home"></i>
                        Accueil</a>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
