<div id="modalManager" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalManagerLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-secondary">
                <h5 class="modal-title text-dark" id="modalManagerLabel">
                    <span class="uil uil-question-circle"></span>
                    {% if operation_type == 'decaissement' %}
                        Approbation de la Fiche de Besoin
                    {% else %}
                        Approbation du Bon d'Approvisionnement
                    {% endif %}
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body font-size-14">
                {% if operation_type == 'decaissement' %}
                    Voulez-vous vraiment approuver ce décaissement ?
                {% else %}
                    Voulez-vous vraiment approuver cet encaissement ?
                {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light font-weight-medium" data-dismiss="modal">Annuler</button>
                <button type="submit" class="btn btn-outline-success font-weight-medium" name="confirm_manager" value="confirm">
                    {% if operation_type == 'decaissement' %}
                        Confirmer le Décaissement
                    {% else %}
                        Confirmer l'Encaissement
                    {% endif %}
                </button>
            </div>
        </div>
    </div>
</div>
<button type="button" class="btn btn-success float-right ml-2" data-toggle="modal" data-target="#modalManager">
    <i class="fa fa-check"></i>
    {% if operation_type == 'decaissement' %}
        Décaissement
    {% else %}
        Encaissement
    {% endif %}
</button>
